                        <span class="icon-part"></span>
                        <span class="icon-part"></span>
                        <span class="icon-part"></span>
                        <span class="icon-part"></span>
                        <span class="icon-part"></span>
                        <span class="icon-part"></span>
                        <span class="icon-part"></span>
                        <span class="icon-part"></span>
                    </span>
                    <span class="dark-span">Dark</span>
                </label>
            </div>
        </main>
        <% include!("../navbar/navbar.stpl"); %>
    </body>
</html>
